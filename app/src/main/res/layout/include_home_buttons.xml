<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray">

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_home_speadup"
            style="@style/home_buttons_style"
            android:drawableTop="@drawable/icon_rocket"
            android:text="@string/home_buttons_speadup"
            />
        <TextView
            android:id="@+id/tv_home_softmgr"
            style="@style/home_buttons_style"
            android:drawableTop="@drawable/icon_softmgr"
            android:text="@string/home_buttons_softmger"
            />
        <TextView
            android:id="@+id/tv_home_mobliemgr"
            style="@style/home_buttons_style"
            android:drawableTop="@drawable/icon_phonemgr"
            android:text="@string/home_buttons_mobilemgr"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_home_numberservice"
            style="@style/home_buttons_style"
            android:drawableTop="@drawable/icon_telmgr"
            android:text="@string/home_buttons_telmgr"
            />
        <TextView
            android:id="@+id/tv_home_filemgr"
            style="@style/home_buttons_style"
            android:drawableTop="@drawable/icon_filemgr"
            android:text="@string/home_buttons_filemgr"
            />
        <TextView
            android:id="@+id/tv_home_rubbishclean"
            style="@style/home_buttons_style"
            android:drawableTop="@drawable/icon_sdclean"
            android:text="@string/home_buttons_rubbishclean"
            />
    </LinearLayout>
</LinearLayout>