<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">
    <ImageView
        android:id="@+id/iv_soft_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:src="@drawable/azy" />
    <TextView
        android:id="@+id/tv_soft_lable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_soft_icon"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/iv_soft_icon"
        android:singleLine="true"
        android:text="QQ"
        android:textColor="#000"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_soft_packagename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_soft_icon"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/iv_soft_icon"
        android:singleLine="true"
        android:text="内存：10.2mb"
        android:textColor="#000"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_soft_sysnumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_soft_icon"
        android:layout_alignParentRight="true"
        android:singleLine="true"
        android:text="系统进程"
        android:textColor="#000"
        android:textSize="10sp" />

</RelativeLayout>